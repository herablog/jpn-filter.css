@import '../includes/_mixin'
@import '../includes/_webfont'


// functions
filter(values)
  vendor('filter', values)

// common props
[data-filter]
  // background-clip border-box
  box-sizing border-box
  // font-size 1px
  position relative
  &::before,
  &::after
    content ""
    display block
    height 100%
    position absolute
    width 100%

// filters
[data-filter='ninagawa']
  filter(hue-rotate(300deg) saturate(2) contrast(2.2))
  &::before
    background-color hsla(2, 100%, 20%, .2)
    background-image radial-gradient(farthest-corner at 60% 55%, transparent 20%, hsla(315, 100%, 60%, .4))

[data-filter='kiyomizu']
  filter(contrast(1.1) hue-rotate(30deg) invert(0.1) saturate(1.2))

[data-filter='origami']
  filter(invert(0.1) sepia(0.1))
  &::before
    box-shadow inset 0 0 20px hsla(0, 0, 0, .25), inset 0 0 100px hsla(0, 0, 0, .1)

[data-filter='namahage']
  filter(brightness(0.9) contrast(2.8) saturate(1.1))

[data-filter='fuji']
  filter(contrast(1.1) saturate(4.1) sepia(0.4))

[data-filter='taisho']
  filter(hue-rotate(338deg) contrast(3) saturate(3))

[data-filter='kurosawa']
  background-color #000
  border-image url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAFoAAABaCAQAAACSoYmJAAAApElEQVR4Ae3aO26FQBREQRJYOgJ7m3yW0U4n6OglY1t1iFuqdNBdlvy9Dxoa+neit5y5M3Zlz1rGs7YF/Z3WUcaztgX9pvW08YxtR6fXxrO20NDQ0NDQ0P8I/aT1tvGMbUcfaX218YxtR6/Zc2XszpmtjWdtvRGhoaE/+4YkSZIkSZIkSf5PQ0NDuzUdc2vq1hQaGhoaGhraralbU7em3ojQ0NA/99zc5nj7qcwAAAAASUVORK5CYII=") 30 fill round
  border-top-width 18px
  border-bottom-width 18px
  filter(grayscale(1) sepia(0.6))
  
[data-filter='kabuki']
  background-color #fff
  border-image url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAFoAAABaAgMAAABFxqmRAAAADFBMVEX/WAkAAAAAeQD+/bVsGVXPAAAALElEQVR4AWOAAtbQUAYGrlWrYPyhLD4qPirO/x8ChqL4qPio+HDMp6Pio+IA/9RODL0WgrMAAAAASUVORK5CYII=") 30 round
  border-top-width 25px
  border-bottom-width 25px
  filter(contrast(2.5))

[data-filter='shodo']
  filter(grayscale(1) contrast(5))
    
[data-filter='makimono']
  border-image url("data:image/png;base64,") 30 round
  border-width 30px
  filter(grayscale(1) sepia(0.4) saturate(1))
  &::before
    box-shadow inset 0 0 40px hsla(0, 0, 0, .45), inset 0 0 100px hsla(0, 0, 0, .1)
  
[data-filter='kawaii']
  background-color hsl(323, 97%, 87%)
  border-image url("data:image/png;base64,") 30 fill round
  border-width 30px
  filter(brightness(1.2) sepia(0.2))
  overflow hidden
  &::before
    bottom 25px
    color hsla(309, 100%, 68%, 0.84)
    content '\f004'
    font-family 'FontAwesome'
    font-size 5em
    height 1em
    text-align center
    text-shadow 7px 0 0 hsla(0, 0, 100%, .8), 0 7px 0 hsla(0, 0, 100%, .8), -7px 0 0 hsla(0, 0, 100%, .8), 0 -7px 0 hsla(0, 0, 100%, .8)
    width 100%

[data-filter='bubble']
  filter(sepia(0.2) opacity(0.8))
  overflow hidden
  &::before
    background-image radial-gradient(farthest-corner at 60% 55%, transparent 40%, hsla(315, 100%, 60%, .4)), linear-gradient(to right, transparent 75%, hsla(264, 100%, 60%, .45))
  &::after
    background transparent
    border-radius 50%
    box-shadow 28px 30px 0 hsla(0, 100%, 50%, .6), 60px 60px 0 hsla(60, 100%, 50%, .4), 89px 71px 0 hsla(0, 100%, 100%, .5), 99px 91px 0 hsla(315, 100%, 60%,.4)
    height 20%
    left -20%
    top -20%
    width 20%

[data-filter='LED']
  &::before
    background hsla(216,100%,60%,.1)
  &::after
    background-image radial-gradient(hsla(183, 100%, 96%, .8) 10%, hsla(177, 86%, 57%, .8) 1%, hsla(208, 100%, 49%, .8) 1%, hsla(184, 100%, 51%, .8) 1%, hsla(219, 100%, 50%, .8) 46%, hsla(233, 99%, 40%, .6))
    // background-image radial-gradient(hsla(183, 100%, 96%, .8) 10%, hsla(177, 86%, 57%, .8) 1%, hsla(208, 100%, 49%, .8) 1%, hsla(184, 100%, 51%, .8) 1%, hsla(219, 100%, 50%, .8) 46%, hsla(233, 99%, 40%, .6))
    background-repeat repeat
    background-size 30px
